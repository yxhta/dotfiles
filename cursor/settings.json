{
  // Editor core settings
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  // Window settings
  "window.zoomLevel": 1,
  // Workbench settings
  "workbench.colorTheme": "Kanagawa",
  // Git settings
  "git.openRepositoryInParentFolders": "never",
  // Go settings
  "go.toolsManagement.autoUpdate": true,
  // TypeScript settings
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // Dart settings
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  // Vim settings
  "vim.enableNeovim": true,
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.neovimUseConfigFile": true,
  "vim.neovimConfigPath": "~/.config/nvim/init.lua",
  "vim.useSystemClipboard": true,
  "vsicons.dontShowNewVersionMessage": true,
  "redhat.telemetry.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "makefile.configureOnOpen": false,
  "cursorStats.enableAlerts": false,
  "githubPullRequests.pullBranch": "never",
  "remote.autoForwardPortsSource": "hybrid",
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "datadog.connection.oauth.setup.organizationId": "367ab142-1f83-11ee-bb57-da7ad0900009",
  "workbench.editor.enablePreview": false
}